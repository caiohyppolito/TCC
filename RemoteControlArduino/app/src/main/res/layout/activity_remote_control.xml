<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.caiogalvani.remotecontrolarduino.RemoteControlActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="14dp">

            <ImageButton
                android:id="@+id/imageButtonLeft"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginTop="30dp"
                android:layout_marginRight="-35dp"
                android:layout_marginEnd="-35dp"
                android:src="@drawable/ic_controller_left"
                android:background="@null"/>

            <ImageButton
                android:id="@+id/imageButtonTop"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_toRightOf="@+id/imageButtonLeft"
                android:layout_toEndOf="@+id/imageButtonLeft"
                android:src="@drawable/ic_controller_top"
                android:background="@null"/>

            <ImageButton
                android:id="@+id/imageButtonRight"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="-35dp"
                android:layout_marginStart="-35dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imageButtonTop"
                android:layout_toEndOf="@+id/imageButtonTop"
                android:src="@drawable/ic_controller_right"
                android:background="@null"/>

            <ImageButton
                android:id="@+id/imageButtonDown"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_toRightOf="@+id/imageButtonLeft"
                android:layout_toEndOf="@+id/imageButtonLeft"
                android:layout_below="@+id/imageButtonTop"
                android:src="@drawable/ic_controller_down"
                android:background="@null"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="14dp">

            <Button
                android:id="@+id/buttonStop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button_stop"/>
            </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
